{
  "compilerOptions": {
    "noEmit": true,
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@database/*": ["../database/*"]
    },
    "types": ["node"]
  },
  "include": ["types/**/*", "constants/**/*", "utils/**/*", "index.ts"],
  "exclude": ["node_modules"]
}
